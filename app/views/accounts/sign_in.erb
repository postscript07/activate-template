
<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <div style="text-align: center">
      
      <%  Account.providers.each { |provider| %>             
        <a class="btn btn-default" href="/auth/<%=provider.omniauth_name%>"><i class="icon-<%=provider.icon%>"></i> Sign in with <%=provider.display_name%></a>
      <% } %>
    </div>

    <hr />

    <form class="form-horizontal" method="post" action="/auth/account/callback">
      <div class="form-group">
        <label class="control-label col-md-4" for="email">Email</label>
        <div class="col-md-4">
          <input type="text" class="form-control" id="email" name="email">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-md-4" for="password">Password</label>
        <div class="col-md-4">
          <input type="password" class="form-control" id="password" name="password">
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-4 col-md-4">
          <button class="btn btn-primary" type="submit">Sign in</button>
        </div>
      </div>

    </form>



  </div>
</div>