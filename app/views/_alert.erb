
<div class="container">
  <div style="position: absolute; width: 100%; z-index: 99" class="mt-3 row justify-content-center">
    <% {:error => 'alert-danger', :warning => 'alert-warning', :notice => 'alert-primary'}.each { |k,v| %>

      <% if flash[k] %>
        <div class="col-12 col-md-6">
          <div class="alert fade show <%=v%> alert-dismissable">
            <%= flash[k] %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>        
          </div>
        </div>
      <% end %> 

    <% } %>       
  </div>
</div>

<script>
  $(function () {
    window.setTimeout(function () {
      $("#alert-wrap .alert").alert('close');
    }, 3000);
  });
</script>




