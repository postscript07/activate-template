<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>ActivateApp</title>

    <%= (css :app).html_safe %>    
    <%= (js :app).html_safe %>
    <%= favicon_tag 'favicon.png' %>
    
    <meta name="og:image" content="<%=image_path('og.png')%>">

    <style>body { padding: 60px 0; }</style>

  </head>
  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="<%=url(:home)%>">ActivateApp</a>
          <div class="nav-collapse">
            <%= render_navigation :context => :activate_admin, :items => [
              {:key => :accounts, :name => 'Accounts', :url => url(:accounts_index), :options => {:container_class => 'nav'}},
              {:key => :blog, :name => 'Blog', :url => url(:blog_index), :options => {:container_class => 'nav'}}              
            ]
          %>            
            <ul class="nav pull-right">            
              <% if current_account %>              
                <li class="dropdown">
                  <a data-toggle="dropdown" class="dropdown-toggle" href="javascript:;"><%=current_account.name%> <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><a href="<%=url(:accounts_edit)%>">Edit profile</a></li>
                    <li><a href="<%=url(:accounts_sign_out)%>">Sign out</a></li>
                  </ul>
                </li>               
              <% else %>                            
                <li>
                  <a href="<%=url(:accounts_sign_up)%>">Sign up</a>
                </li>
                <li>
                  <a href="<%=url(:accounts_sign_in)%>">Sign in</a>
                </li>                
              <% end %>
            </ul>                      
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>  

    <div class="container-fluid">

      <div class="row-fluid">
        <div class="span12">

          <div style="z-index: 1040; width: 40%; margin-left: -20%; left: 50%; position: absolute; margin-top: -40px">
            <% {:error => 'alert-error', :warning => '', :notice => 'alert-info'}.each { |k,v| %>
              <% if flash[k] %>
                <div class="fade in alert <%=v%>" style="box-shadow: 1px 1px 3px #ccc;">
                  <button data-dismiss="alert" class="close" type="button">Ã—</button>
                  <%= flash[k].html_safe %>
                </div>
              <% end %>        
            <% } %>       
          </div>
          <script>
            $(function() {
              $(".alert").alert()
              window.setTimeout(function() { $(".alert").alert('close'); }, 3000);
            });
          </script>

          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
